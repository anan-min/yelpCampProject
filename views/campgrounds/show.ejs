<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= campground.img %>" alt="" />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text">
          <small class="text-muted"><%= campground.location %></small>
        </p>
        <p class="card-text">
          <small class="text"
            >submitted by <%= campground.author.username %></small
          >
        </p>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <div class="card-body">
        <% if(currentUser && campground.author.equals(currentUser)) { %>
        <a
          href="/campgrounds/<%= campground._id %>/edit"
          class="card-link btn btn-info mb-3"
          >edit</a
        >

        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger mb-3">Delete</button>
        </form>
        <% } %>
      </div>
      <div class="card-footer">
        2 days ago
        <a href="/campgrounds"> all campgrounds</a>
      </div>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) {%>
    <form
      action="/campgrounds/<%=campground._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <h2>Leave a review</h2>
      <div class="mb-3">
        <label class="form-label" for="review-rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="review-rating"
        />
      </div>
      <div class="mb-3">
        <label for="review-body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="review-body"
          cols="30"
          rows="5"
          required
        ></textarea>
      </div>
      <button class="btn btn-success mb-3">Submit</button>
    </form>
    <%}%> <% for(let review of campground.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="class-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          By <%=review.author.username%>
        </h6>
        <p>Review: <%= review.body %></p>
        <form
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <% if(currentUser && review.author.equals(currentUser)) { %>
          <button class="btn btn-danger btn-sm">delete</button>
          <% } %>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
